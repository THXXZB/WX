<template name="home-products">
  <navigator url="{{item.linkUrl}}" class="products">
    <image src="{{item.imgUrl}}" mode="aspectFit"></image>
    <text class="description">{{item.description}}</text>
    <view class="price-paied-info">
      <view class="price">￥<text>{{item.price}}</text></view>
      <view class="paied">已拼{{item.saledNum}}万件</view>
      <view class="customers">
        <image class="avatar" src="{{item.customer1}}"></image>
        <image class="avatar" src="{{item.customer2}}"></image>
      </view>
    </view>
  </navigator>
</template>