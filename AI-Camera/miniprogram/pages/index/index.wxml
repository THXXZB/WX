<view class="index">
  <view class="index__hd">
    <image class="index-logo" src="{{userInfo.avatarUrl}}"></image>
    <view class="index-desc" style="text-align:center;">演示：小程序云开发解决方案</view>
  </view>
  <view class="index__bd">
    <view class="login" style="text-align:center;" wx:if="{{!userInfo}}">
      <button open-type="getUserInfo" bindgetuserinfo="getUserInfo" class="weui-btn" type="primary">登录</button>
    </view>
    <button class="weui-btn" bindtap="start" type="primary" wx:else>test</button>
  </view>
</view>
